<script>
    ;
    var layout2NorthH = 1;
    $(function () {
        InitialPage();
        GetTree();
        GetMapData();
        GetGrid();
        //$(".ui-layout-west").css("overflow", "hidden !important");
        //查询点击事件
        $("#btn_Search").click(function () {
            SearchEvent();
        });

        $("#itemTree").setNodeChecked('370100');
    });
    //初始化页面
    function InitialPage() {
        //layout布局
        $('#layout').layout({
            applyDemoStyles: true,
            onresize: function () {
                if (isResize < 10) {
                    isResize++;
                }
                resize();
            }
        });
        var isResize = 0;
        var count = 0;
        var resized = 0;
        $('#layout2').layout({
            applyDemoStyles: true,
            onresize: function () {
                resize();
                if (isResize > 1) {
                    resized = 1;
                    //$("#layout2 .ui-layout-center").height($("#layout2 .ui-layout-center").height() + 18);
                } else {
                    if (count == 1 || resized == 0) {
                        $("#layout2 .ui-layout-center").height($("#layout2 .ui-layout-center").height() - 18);
                    }
                }
                count++;
            }
        });
        //resize重设布局;
        $(window).resize(function (e) {
            if (isResize < 10) {
                isResize++;
            }
            resize();
            e.stopPropagation();
        });
        function resize() {
            window.setTimeout(function () {
                if (mapCtlExt != null) {
                    mapCtlExt.setHeight($("#mapControl").parent().height() - 32 - 4);
                }
                $(".center-Panel").height($("#layout").parent().height() - 20);
                $("#pdfTest").height($("#layout").parent().height() - 20);
                $("#layout2").width($("#pdfTest").width() - 9);
                //$("#layout2 .ui-layout-center").height($("#layout2 .ui-layout-center").height()  - 18);
                $('#gridTable').setGridWidth(($('.gridPanel').width()));

                $("#layout2 .ui-layout-center").width($("#layout2 .ui-layout-center").parent().width() - 10);
                $("#layout2 .ui-layout-resizer").width($("#layout2 .ui-layout-center").parent().width() - 10);

                $('#gridTable').setGridHeight($(window).height() - $("#mapControl").height() - $(".panel-Title").height());
                $('#gridTable').setGridHeight($("#layout2 .ui-layout-center").height() - 60 - 60);
                $('.ui-jqgrid-bdiv').height($("#layout2 .ui-layout-center").height() - 60 - 60);
                $("#layout2 .ui-layout-center").height($("#layout2").height() - $("#layout2 .ui-layout-north").height() - 15);
                $('#gridTable').setGridHeight($("#layout2 .ui-layout-center").height() - 115);
                $("#layout2 .ui-layout-center").css("overflow", "hidden");
            }, 200);
        };
        $(window).resize();
        //$("#layout2 .ui-layout-center").height($("#layout2 .ui-layout-center").height() - 18);
        layout2NorthH = $("#layout2 .ui-layout-north").height();
        var mult = $("#multMediaControl").MultMediaControl();
        $("#testMult").click(function () {
            mult.g
        });
    }
    //加载行政区划树
    var AreaCode = 0;
    function GetTree() {
        var item = {
            height: $(window).height() - 52,
            isAllExpand: false,
            isSearch:true,
            url: "../../Map/GetTreeJsonForMap",
            searchUrl: "../../Map/GetTreeJsonForMap",
            onnodeclick: function (item) {
                AreaCode = item.id;
                if (item.value.split(',')[1] < 3) {
                    //展开下级
                    $(".bbit-tree-selected").children('.bbit-tree-ec-icon').trigger("click");
                }
                $('#btn_Search').trigger("click");
            },
        };
        //初始化
        $("#itemTree").treeview(item);
    };
    //加载地图
    var mapCtlExt = null;
    function GetMapData() {
        mapCtlExt = $("#mapControl").mapCtl(
            cfGetMapData({}));
    };
    //加载表格
    function GetGrid() {
        var selectedRowIndex = 0;
        var queryJson = $("#filter-form").getWebControls();
        queryJson["AreaCode"] = AreaCode;
        var $gridTable = $('#gridTable');
        $gridTable.jqGrid({
            autowidth: true,
            postData: { queryJson: JSON.stringify(queryJson) },
            height: $(window).height() - 570,
            url: "../../DemoManage/Base_Area/GetPageListJson",
            datatype: "json",
            colModel: [
                { label: '区域主键', name: 'F_AreaId', index: 'F_AreaId', width: 100, align: 'left', sortable: true },
                { label: '父级主键', name: 'F_ParentId', index: 'F_ParentId', width: 100, align: 'left', sortable: true },
                { label: '区域编码', name: 'F_AreaCode', index: 'F_AreaCode', width: 100, align: 'left', sortable: true },
                { label: '区域名称', name: 'F_AreaName', index: 'F_AreaName', width: 100, align: 'left', sortable: true },
                { label: '快速查询', name: 'F_QuickQuery', index: 'F_QuickQuery', width: 100, align: 'left', sortable: true },
                { label: '简拼', name: 'F_SimpleSpelling', index: 'F_SimpleSpelling', width: 100, align: 'left', sortable: true },
                { label: '层次', name: 'F_Layer', index: 'F_Layer', width: 100, align: 'left', sortable: true },
            ],
            viewrecords: true,
            rowNum: 30,
            rowList: [30, 50, 100],
            pager: "#gridPager",
            sortname: 'F_AreaId',
            sortorder: 'desc',
            rownumbers: true,
            shrinkToFit: false,
            gridview: true,
            onSelectRow: function () {
                selectedRowIndex = $('#' + this.id).getGridParam('selrow');
            },
            gridComplete: function () {
                $('#' + this.id).setSelection(selectedRowIndex, false);
            }
        });
    }
    //新增
    function btn_add() {
        dialogOpen({
            id: 'Form',
            title: '添加行政区域表',
            url: '/DemoManage/Base_Area/Base_AreaForm',
            width: '500px',
            height: '400px',
            callBack: function (iframeId) {
                getInfoTop().frames[iframeId].AcceptClick();
            }
        });
    }
    //编辑
    function btn_edit() {
        var keyValue = $("#gridTable").jqGridRowValue('F_AreaId');
        if (checkedRow(keyValue)) {
            dialogOpen({
                id: 'Form',
                title: '编辑行政区域表',
                url: '/DemoManage/Base_Area/Base_AreaForm?keyValue=' + keyValue,
                width: '500px',
                height: '400px',
                callBack: function (iframeId) {
                    getInfoTop().frames[iframeId].AcceptClick();
                }
            })
        }
    }
    //删除
    function btn_delete() {
        var keyValue = $("#gridTable").jqGridRowValue('F_AreaId');
        if (keyValue) {
            $.RemoveForm({
                url: '../../DemoManage/Base_Area/RemoveForm',
                param: { keyValue: keyValue },
                success: function (data) {
                    $('#gridTable').trigger('reloadGrid');
                }
            })
        } else {
            dialogMsg('请选择需要删除的行政区域表！', 0);
        }
    }
    //查询表格函数
    function SearchEvent() {
        var queryJson = $("#filter-form").getWebControls();
        queryJson["AreaCode"] = AreaCode
        $("#gridTable").jqGrid('setGridParam', {
            postData: { queryJson: JSON.stringify(queryJson) },
            url: "../../DemoManage/Base_Area/GetPageListJson",
            page: 1
        }).trigger('reloadGrid');
    }

    function reload() {

        exportPDF($("#pdfTest"), $("#pdfTest").height(), false, true)
    }


    function ColDataGrid() {
        var centerHeight = $("#ui_center .ui-layout").height();
        var layout2 = $('#layout2').layout();

        if ($("#lr-colgrid i").hasClass("fa-chevron-down")) {
            var northH = centerHeight - 65;
            layout2.sizePane("north", northH);
            $("#lr-colgrid i").removeClass("fa-chevron-down");
            $("#lr-colgrid i").addClass("fa-chevron-up");
            if ($("#lr-colmap i").hasClass("fa-chevron-down")) {
                $("#lr-colmap i").removeClass("fa-chevron-down");
                $("#lr-colmap i").addClass("fa-chevron-up");
            }
        }
        else {
            layout2.sizePane("north", layout2NorthH);
            $("#lr-colgrid i").removeClass("fa-chevron-up");
            $("#lr-colgrid i").addClass("fa-chevron-down");

        }
        mapCtlExt.updateSize();
    }

    function ColMapDiv() {
        var layout2 = $('#layout2').layout();
        if ($("#lr-colmap i").hasClass("fa-chevron-up")) {
            layout2.sizePane("north", 1);
            $("#lr-colmap i").removeClass("fa-chevron-up");
            $("#lr-colmap i").addClass("fa-chevron-down");
            if ($("#lr-colgrid i").hasClass("fa-chevron-up")) {
                $("#lr-colgrid i").removeClass("fa-chevron-up");
                $("#lr-colgrid i").addClass("fa-chevron-down");
            }
        }
        else {
            layout2.sizePane("north", layout2NorthH);
            $("#lr-colmap i").removeClass("fa-chevron-down");
            $("#lr-colmap i").addClass("fa-chevron-up");
            if (mapCtlExt != null) {
                mapCtlExt.setHeight($("#mapControl").parent().height() - 32 - 4);
            }
        }
        mapCtlExt.updateSize();
    }

</script>
