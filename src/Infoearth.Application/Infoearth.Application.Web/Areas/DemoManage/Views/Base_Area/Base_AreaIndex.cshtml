                            <input type="button" value="设置值" id="setDistrict" />
                        </div>
                        <div class="clear"></div>

                        <div class="pane" id="kneecoordinate"></div>
                        <div class="pane">

                            <a id="displayKneecoor" class="btn btn-default">显示拐点区域</a>

                        </div>
                    </div>
                        <div id="multMediaControl" style="width: 100%; padding: 20px; clear: both; margin-top: 0px; border-left: 1px solid blue; border-bottom: 1px solid blue; border-right: 1px solid blue; border-top: 1px solid blue; "></div>
                    <input type="button" id="testMult" value="测试多媒体获取数据" />

                </div>
            </div>
            @*</div>*@
        </div>
    </div>
