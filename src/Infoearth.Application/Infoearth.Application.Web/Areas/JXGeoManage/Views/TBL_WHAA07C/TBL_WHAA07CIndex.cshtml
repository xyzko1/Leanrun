@{
    ViewBag.Title = "列表页面";
    Layout = "~/Views/Shared/_Index.cshtml";
}
<div class="titlePanel">
    <div class="title-search">
        <table>
            <tr>
                <td>
                    <input id="txt_Keyword" type="text" class="form-control" placeholder="请输入要查询关键字" style="width: 200px;" />
                </td>
                <td style="padding-left: 5px;">
                    <a id="btn_Search" class="btn btn-primary"><i class="fa fa-search"></i>查询</a>
                </td>
            </tr>
        </table>
    </div>
    <div class="toolbar">
        <div class="btn-group">
            <a id="lr-replace" class="btn btn-default" onclick="reload()"><i class="fa fa-refresh"></i>&nbsp;刷新</a>
            <a id="lr-add" class="btn btn-default" onclick="btn_add()"><i class="fa fa-plus"></i>&nbsp;新增</a>
            <a id="lr-edit" class="btn btn-default" onclick="btn_edit()"><i class="fa fa-pencil-square-o"></i>&nbsp;编辑</a>
            <a id="lr-delete" class="btn btn-default" onclick="btn_delete()"><i class="fa fa-trash-o"></i>&nbsp;删除</a>
        </div>
    </div>
                      <div style="clear:both;"></div>
</div>
<div class="gridPanel">
    <table id="gridTable"></table>
    <div id="gridPager"></div>
</div>

@section Scripts{
<script>
    $(function () {
        InitialPage();
        GetGrid();
    });
    //初始化页面
    function InitialPage() {
        //resize重设布局;
        $(window).resize(function (e) {
            window.setTimeout(function () {
                $('#gridTable').setGridWidth(($('.gridPanel').width()));
                $('#gridTable').setGridHeight($(window).height() - 136.5);
            }, 200);
            e.stopPropagation();
        });
    }
    //加载表格
    function GetGrid() {
        var selectedRowIndex = 0;
        var $gridTable = $('#gridTable');
        $gridTable.jqGrid({
            autowidth: true,
            height: $(window).height() - 136.5,
            url: "../../JXGeoManage/TBL_WHAA07C/GetPageListJson",
            datatype: "json",
            colModel: [
                { label: 'GUID', name: 'GUID', index: 'GUID', width: 100, align: 'left',sortable: true  },
                { label: '自增长ID', name: 'SUMTYPE', index: 'SUMTYPE', width: 100, align: 'left',sortable: true  },
                { label: '查询的表名称', name: 'TABLENAME', index: 'TABLENAME', width: 100, align: 'left',sortable: true  },
                { label: '统计字段名称', name: 'REPORTFIELD', index: 'REPORTFIELD', width: 100, align: 'left',sortable: true  },
                { label: '统计内容', name: 'REPORTTYPE', index: 'REPORTTYPE', width: 100, align: 'left',sortable: true  },
                { label: '求合语句2', name: 'REPORTCLASS', index: 'REPORTCLASS', width: 100, align: 'left',sortable: true  },
                { label: '统计语句', name: 'REPORTVALUE', index: 'REPORTVALUE', width: 100, align: 'left',sortable: true  },
                { label: '其中灾害类型的求合语句', name: 'RPCAPTION', index: 'RPCAPTION', width: 100, align: 'left',sortable: true  },
                { label: '求合语句1', name: 'MEASURE', index: 'MEASURE', width: 100, align: 'left',sortable: true  },
                { label: '个数', name: 'WIDTH', index: 'WIDTH', width: 100, align: 'left',sortable: true  },
            ],
            viewrecords: true,
            rowNum: 30,
            rowList: [30, 50, 100],
            pager: "#gridPager",
            sortname: 'GUID',
            sortorder: 'desc',
            rownumbers: true,
            shrinkToFit: false,
            gridview: true,
            onSelectRow: function () {
                selectedRowIndex = $('#' + this.id).getGridParam('selrow');
            },
            gridComplete: function () {
                $('#' + this.id).setSelection(selectedRowIndex, false);
            }
        });
    }
    //新增
    function btn_add() {
        dialogOpen({
            id: 'Form',
            title: '添加统计分析查询语句表',
            url: '/JXGeoManage/TBL_WHAA07C/TBL_WHAA07CForm',
            width: 'px',
            height: 'px',
            callBack: function (iframeId) {
                getInfoTop().frames[iframeId].AcceptClick();
            }
        });
    }
    //编辑
    function btn_edit() {
        var keyValue = $("#gridTable").jqGridRowValue('GUID');
        if (checkedRow(keyValue)) {
            dialogOpen({
                id: 'Form',
                title: '编辑统计分析查询语句表',
                url: '/JXGeoManage/TBL_WHAA07C/TBL_WHAA07CForm?keyValue=' + keyValue,
                width: 'px',
                height: 'px',
                callBack: function (iframeId) {
                    getInfoTop().frames[iframeId].AcceptClick();
                }
            })
        }
    }
    //删除
    function btn_delete() {
        var keyValue = $("#gridTable").jqGridRowValue('GUID');
        if (keyValue) {
            $.RemoveForm({
                url: '../../JXGeoManage/TBL_WHAA07C/RemoveForm',
                param: { keyValue: keyValue },
                success: function (data) {
                    $('#gridTable').trigger('reloadGrid');
                }
            })
        } else {
            dialogMsg('请选择需要删除的统计分析查询语句表！', 0);
        }
    }
</script>
}
