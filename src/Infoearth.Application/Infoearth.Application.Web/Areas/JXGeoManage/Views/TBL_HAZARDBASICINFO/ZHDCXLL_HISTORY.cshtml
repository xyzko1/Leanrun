                    <iframe id="ZXSJCXA" width="100%" src="" onscroll="no" style="border:none;height:100%"></iframe>
                </div>*@
                <div id="LSSJCX" class="tab-pane fade in active" style="height: 100%; width: 100%;background:#fff">
                    <iframe id="LSSJCXA1" width="100%" src="" onscroll="no" style="border:none;height:100%"></iframe>
                </div>
            </div>
        </div>
    </div>
@section Scripts{
<script>
    $(function () {
        var AreaCode = 0, AreaVale = "", flag = true, tabname = "GJCXH";
        initControl();
        InitialPage();
        $('.ui-layout-center').css('overflow', 'hidden');
        GetTree();
        $("#serch-btn").click(function () {
            if (flag) {
                if (tabname == "ZXSJCX") {
                    $("#GJCX").css("top", 40)
                } else {
                    $("#GJCXH").css("top", 40)
                }
                
                $("#fontfamily").removeClass();
                $("#fontfamily").addClass("fa fa-caret-down")
                flag = false
            } else {
                if (tabname == "ZXSJCX") {
                    $("#GJCX").css("top", -120)
                } else {
                    $("#GJCXH").css("top", -120)
                }
                $("#fontfamily").removeClass();
                $("#fontfamily").addClass("fa fa-caret-right")
                flag = true
            }
        })
        $('#LSSJCXA1').attr('src', "/JXGeoManage/TBL_HAZARDBASICINFO/TBL_HAZARDBASICINFOQueryBhistory?AreaVale=" + AreaVale);
        //高级查询点击事件
        $("#btn_Search_higher").click(function () {
            if ($('#ZXSJCXA').attr('src') != "" && $('#ZXSJCXA').attr('src') != undefined) {
                var queryJson = $.extend(queryJson, $("#GJCX").getWebControls(), {});
                queryJson["PROVINCE"] = PROVINCE;
                queryJson["CITY"] = CITY;
                queryJson["COUNTY"] = COUNTY;
                $('#ZXSJCXA')[0].contentWindow.SearchEvent(queryJson);
            }
        })
        //高级查询点击事件
        $("#btn_Search_higher_history").click(function () {
            if ($('#LSSJCXA1').attr('src') != "" && $('#LSSJCXA1').attr('src') != undefined) {
                var queryJson = $.extend(queryJson, $("#GJCXH").getWebControls(), {});
                queryJson["txt_Key"] = $("#txt_Key").val();
                queryJson["PROVINCE"] = PROVINCE;
                queryJson["CITY"] = CITY;
                queryJson["COUNTY"] = COUNTY;
                $('#LSSJCXA1')[0].contentWindow.SearchEvent(queryJson);
            }
        })
        //高级查询点击事件
        $("#btn_Search").click(function () {
            if ($('#LSSJCXA1').attr('src') != "" && $('#LSSJCXA1').attr('src') != undefined) {
                var queryJson = $.extend(queryJson, $("#GJCXH").getWebControls(), {});
                queryJson["txt_Key"] = $("#txt_Key").val();
                queryJson["PROVINCE"] = PROVINCE;
                queryJson["CITY"] = CITY;
                queryJson["COUNTY"] = COUNTY;
                $('#LSSJCXA1')[0].contentWindow.SearchEvent(queryJson);
            }
        })
        //重置
        $("#btn_Reset_history").click(function () {
            $("#DISASTERNAME").val("");
            $("#UNIFIEDCODE").val("");
            $("#DISASTERTYPE").val("");
            $("#DISASTERTYPE").attr("data-value", "").attr("data-text", "");
            $("#DISASTERTYPE .ui-select-text").text(" ");

            $("#PROJECTNAME").val("");
            $("#PROJECTNAME").attr("data-value", "").attr("data-text", "");
            $("#PROJECTNAME .ui-select-text").text(" ");

            $("#MODIFYTYPE").val("");
            $("#MODIFYTYPE").attr("data-value", "").attr("data-text", "");
            $("#MODIFYTYPE .ui-select-text").text(" ");

            $("#shifouhexiao").val("");
            $("#shifouhexiao").attr("data-value", "").attr("data-text", "");
            $("#shifouhexiao .ui-select-text").text(" ");

            $("#ISZLGCPNT").val("");
            $("#ISZLGCPNT").attr("data-value", "").attr("data-text", "");
            $("#ISZLGCPNT .ui-select-text").text(" ");

            $("#RELOCATION").val("");
            $("#RELOCATION").attr("data-value", "").attr("data-text", "");
            $("#RELOCATION .ui-select-text").text(" ");
            $("#BeginTime").val("");
            $("#EndTime").val("");

        });
        //重新加载行政区划树
        $("#btn_ResetTree").click(function () {
            GetTree();
        });
        //初始化页面
        function InitialPage() {
            var isResize = 0;
            //layout布局
            $('#layout').layout({
                west__size: 190,
                applyDemoStyles: true,
                onresize: function () {
                    if (isResize < 10) {
                        isResize++;
                    }
                    resize();
                }
            });
            //layout.sizePane("")
            //resize重设布局;
            $(window).resize(function (e) {
                if (isResize < 10) {
                    isResize++;
                }
                resize();
                e.stopPropagation();
            });
            function resize() {
                window.setTimeout(function () {
                    $('#layout2 .ui-layout-center').css('overflow', 'hidden');
                   
                }, 200);
                $('#layout2 .ui-layout-center').css('overflow', 'hidden');
                $("#itemTree").height($('.ui-layout-west').height() - 45);
            };
        }
        //加载行政区划树
        var AreaCode = 0, PROVINCE = "", CITY = "", COUNTY = "";
        function GetTree() {
            var item = {
                height: $(window).height() - 52,
                isAllExpand: false,
                url: "../../Map/GetTreeJsonForMap",
                onnodeclick: function (item) {
                    AreaCode = item.id;
                    AreaVale = item.value;
                    var level = item.value.split(',')[1];
                    if (level == 1) {
                        PROVINCE = item.id;
                        CITY = "";
                        COUNTY = "";
                    } else if (level == 2) {
                        PROVINCE = item.id.substring(0, 2) + "0000";
                        CITY = item.id;
                        COUNTY = "";
                    } else if (level == 3) {
                        PROVINCE = item.id.substring(0, 2) + "0000";
                        CITY = item.id.substring(0, 4) + "00";
                        COUNTY = item.id;
                    } else if (level == -1) {
                        PROVINCE = "";
                        CITY = "";
                        COUNTY = "";
                    }
                    
                    if ($('#LSSJCXA1').attr('src') != "" && $('#LSSJCXA1').attr('src') != undefined) {
                        var queryJson = $.extend(queryJson, $("#GJCXH").getWebControls(), {});
                        queryJson["AreaCode"] = AreaCode;
                        queryJson["PROVINCE"] = PROVINCE;
                        queryJson["CITY"] = CITY;
                        queryJson["COUNTY"] = COUNTY;
                        $('#LSSJCXA1')[0].contentWindow.SearchEvent(queryJson);
                        var data = [{
                            latitude: item.value.split(',')[3],
                            longitude: item.value.split(',')[2],
                            popupHtml: ""
                        }]
                        $('#LSSJCXA1')[0].contentWindow.mapCtlExt.addLocation(data,false,level);
                    }
                },
            };
            //初始化
            $("#itemTree").treeview(item);
        };
        //初始化控件
        function initControl() {
            WriteAndDrop();
            //是否治理
            $("#ISZLGCPNT").ComboBox({
                data: [{ 'text': '是', 'value': 1 }, { 'text': '否', 'value': 0 }],
                id: "value",
                text: "text",
                height: '200px'
            });

            //是否搬迁
            $("#RELOCATION").ComboBox({
                data: [{ 'text': '是', 'value': 1 }, { 'text': '否', 'value': 0 }],
                id: "value",
                text: "text",
                height: '200px'
            });

            //是否核销
            $("#shifouhexiao").ComboBox({
                data: [{ 'text': '是', 'value': 1 }, { 'text': '否', 'value': 0 }],
                id: "value",
                text: "text",
                height: '200px'
            });

            //操作类型
            $("#MODIFYTYPE").ComboBox({
                data: [{ 'text': '批量导入', 'value': 'I' }, { 'text': '新增记录', 'value': 'A' }, { 'text': '修改记录', 'value': 'U' }, { 'text': '销号记录', 'value': 'D' }, { 'text': '删除记录', 'value': 'R' }],
                id: "value",
                text: "text",
                height: '200px'
            });
            //项目类型
            //$("#PROJECTID").ComboBox({
            //    data: [{ 'text': '调查', 'value': "" }, { 'text': '排查', 'value': 0 }],
            //    id: "value",
            //    text: "text",
            //    height: '200px'
            //});
            //灾害类型
            $("#DISASTERTYPE").ComboBox({
                url: "../../SystemManage/DataItemDetail/GetDataItemTreeJson",
                param: { EnCode: "HazardType" },
                id: "text",
                text: "text",
                multiple: true,
                height: '210px',
                description: "==请选择=="
            });
        }

        //输入框+按钮下拉框初始化
        function WriteAndDrop() {
            var authToken = getAuthorizationToken();
            $.ajax({
                cache: false,
                type: "GET",
                dataType: "json",
                url: "../../api/JYGC_PROJECTBASEINFOApi/GetListJson?queryJson=" + JSON.stringify({}),
                beforeSend: function (request) {
                    request.setRequestHeader("Authorization", authToken);
                },
                error: function () {
                    alert("请求失败");
                },
                success: function (data) {
                    if (data.length > 0) {
                        var comboData = '[';
                        for (var i = 0; i < data.length; i++) {
                            if (i != data.length - 1) {
                                comboData += '{ label:"' + data[i].PROJECTNAME + '",value:"' + data[i].PROJECTGUID + '"},';
                            } else {
                                comboData += '{ label:"' + data[i].PROJECTNAME + '",value:"' + data[i].PROJECTGUID + '"}]';
                            }
                        }
                        var comboData2 = eval('(' + comboData + ')');
                        $("#PROJECTNAME").ComboBox({
                            id: "value",
                            text: "label",
                            description: "==请选择==",
                            height: "200px",
                            data: comboData2
                        });
                    }

                }
            });
        }
    });
</script>
}
