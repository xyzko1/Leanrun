@{
    ViewBag.Title = "表单页面";
    Layout = "~/Views/Shared/_Form.cshtml";
}
<style>
    .Ndispplay {
        display: none;
    }

    #mainContent {
        background: #fff;
    }

    .formTitle {
        width: 110px !important;
        background: #ebebeb;
    }

    .haszard {
        background: #C3C3C3;
    }

    .form td {
        border: 1px solid #d6d6d6;
        text-align: center !important;
    }

        .form td input {
            border-top: none;
            border-left: none;
            border-right: none;
        }

        .form td textarea {
            border-top: none;
            border-left: none;
            border-right: none;
        }

    .form-control:disabled {
        background: #fff;
    }

    .formValue {
        background: #fff;
    }

    .ui-select .ui-select-text {
        border: 0px;
    }

    .btn-group.open .dropdown-toggle {
        -webkit-box-shadow: none;
        box-shadow: none;
    }

    .readonly {
        background: #f1efef !important;
    }

    .spans {
        padding: 0 10px;
        width: 9%;
        text-align: center;
        height: 28px;
        line-height: 28px;
        min-width: 100px;
    }

    .form-control {
        border-radius: 0px;
    }
    body {
        overflow-y: hidden;
    }
</style>
<div style="margin: 10px;">
    <div class="panel-Title" style="background-color: rgba(236, 247, 255, 1); color: #000; border-radius: 5px; text-align: left; padding-left: 9px; display: none;" id="li_close">
        <i class="fa fa-bars"></i>详细信息
        <div style="float:right;margin-right:25px;">
            <a class="btn btn-default" style="border:1px solid #ccc;border-radius:4px;margin-top:-5px;padding:5px 10px;" onclick="thisClose()"><i class="fa fa-close"></i> 关闭</a>
        </div>
    </div>
    <table class="form">
        <tr>
            <td class="formTitle">编号<span class="required" style="color:red">*</span></td>
            <td class="formValue">
                <input id="UNIFIEDCODE" type="text" class="form-control readonly" readonly="readonly" placeholder="请单击选择" isvalid="yes" checkexpession="NotNull" />
            </td>
            <td class="formTitle">医院名称<span class="required" style="color:red">*</span></td>
            <td class="formValue">
                <input id="NAME" type="text" class="form-control" isvalid="yes" checkexpession="NotNull" />
            </td>
            <td class="formTitle">医院等级</td>
            <td class="formValue">
                <input id="HOSPITALRANK" type="text" class="form-control" />
            </td>
        </tr>
        <tr>
            <td class="formTitle">区县</td>
            <td class="formValue">
                <input id="CITY" type="text" class="form-control readonly" readonly="readonly" />
            </td>
            <td class="formTitle">乡镇</td>
            <td class="formValue">
                <input id="TOWN" type="text" class="form-control readonly" readonly="readonly" />
            </td>
            <td class="formTitle">村组</td>
            <td class="formValue">
                <input id="VILLAGE" type="text" class="form-control" />
            </td>
        </tr>
        <tr>
            <td class="formTitle">经度</td>
            <td class="formValue">
                <input id="LONGITUDE" type="text" class="form-control" />
            </td>
            <td class="formTitle">纬度</td>
            <td class="formValue">
                <input id="LATITUDE" type="text" class="form-control" />
            </td>
            <td class="formTitle">修建时间</td>
            <td class="formValue">
                <input id="CREATETIME" type="text" class="form-control input-wdatepicker" onfocus="WdatePicker()" />
            </td>
           
        </tr>
        <tr>
            <td class="formTitle">总资产</td>
            <td class="formValue">
                <input id="TOTALASSETS" type="text" class="form-control" />
            </td>
            <td class="formTitle">建筑面积</td>
            <td class="formValue">
                <input id="AREASTRUCTURE" type="text" class="form-control" />
            </td>
            <td class="formTitle">占地面积</td>
            <td class="formValue">
                <input id="FLOORSPACE" type="text" class="form-control" />
            </td>
        </tr>
        <tr>
            <td class="formTitle">结构类型</td>
            <td class="formValue">
                <input id="STRUCTURETYPE" type="text" class="form-control" />
            </td>
            <td class="formTitle">职工人数</td>
            <td class="formValue">
                <input id="HOSPITALPEOPLE" type="text" class="form-control" />
            </td>
            <td class="formTitle">医护人员数</td>
            <td class="formValue">
                <input id="MEDICALWORKERS" type="text" class="form-control" />
            </td>
        </tr>
        <tr>
            <td class="formTitle">日就诊人</td>
            <td class="formValue">
                <input id="AVERAGEDAILY" type="text" class="form-control" />
            </td>
            <td class="formTitle">病床数</td>
            <td class="formValue">
                <input id="SICKBEDNUMBER" type="text" class="form-control" />
            </td>

            <td class="formTitle">救护车辆数</td>
            <td class="formValue">
                <input id="AMBULANCE" type="text" class="form-control" />
            </td>
        </tr>
        <tr>
            <td class="formTitle">法人<span class="required" style="color:red">*</span></td>
            <td class="formValue">
                <input id="LEGALPERSON" type="text" class="form-control" isvalid="yes" checkexpession="NotNull" />
            </td>
            <td class="formTitle">身份证号</td>
            <td class="formValue">
                <input id="CARDID" type="text" class="form-control" />
            </td>
            <td class="formTitle">电话</td>
            <td class="formValue">
                <input id="PHONE" type="text" class="form-control" />
            </td>
        </tr>
        <tr>
            <td class="formTitle">手机</td>
            <td class="formValue">
                <input id="MOBILE" type="text" class="form-control" />
            </td>
        </tr>
        <tr style="display:none;">
            <td class="formTitle">医院ID</td>
            <td class="formValue">
                <input id="NAMEID" type="text" class="form-control" />
            </td>
            <td class="formTitle">法人ID</td>
            <td class="formValue">
                <input id="LEGALPERSONID" type="text" class="form-control" />
            </td>
        </tr>

    </table>
</div>

@section Scripts{
<script>
    var keyValue = request('keyValue');
    var XQing = request('XQing');
    var callback = request('callback');//"返回"跳转url
    $(function () {
        initControl();
    });
    //初始化控件
    function initControl() {
        if (XQing == 01) {
            $("input").attr("disabled", "disabled");
        }
        if (callback) {
            $("#li_close").show();
        }
        //获取表单
        if (!!keyValue) {
            $.SetForm({
                url: "../../JXGeoManage/TBL_RWJJ_HOSPITAL/GetFormJson",
                param: { keyValue: keyValue },
                success: function (data) {
                    $("#form1").SetWebControls(data);
                }
            })
        } else {
            $("#UNIFIEDCODE").click(function () {
                btn_Create();
            });
        }
    }
    //保存表单;
    function AcceptClick() {
        if (!$('#form1').Validform()) {
            return false;
        }
        var postData = $("#form1").GetWebControls(keyValue);
        $.SaveForm({
            url: "../../JXGeoManage/TBL_RWJJ_HOSPITAL/SaveForm?keyValue=" + keyValue,
            param: postData,
            loading: "正在保存数据...",
            success: function () {
                      try {
                            getInfoTop().learun.currentIframe().$('#gridTable3').trigger('reloadGrid');
                      } catch (e) {
                            window.parent.$('#gridTable3').trigger('reloadGrid');
                      }
            }
        })
    }
    //生成统一编号
    function btn_Create() {
        learun.dialogOpen({
            id: 'Form2',
            title: '获取人文经济编号',
            url: '../../JXGeoManage/TBL_RWJJ_GOVERNMENT/CreateCodeIndex?tabhtml=F',
            width: '500px',
            height: '500px',
            isClose: true,
            callBack: function (iframeId) {
                var data = getInfoTop().frames[iframeId].AcceptClick();
                $("#CITY").val(data["countyName"]);
                $("#TOWN").val(data["townName"]);
                $("#UNIFIEDCODE").val(data["UNIFIEDCODE"]);
            }
        });
    }
</script>
}
