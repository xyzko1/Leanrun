"~/Content/scripts/plugins/cookie/js",
"~/Content/scripts/plugins/dialog/js",
"~/Content/scripts/utils/learun.js",
"~/Content/adminLTE/js")
<script>
    var contentPath = '@Url.Content("~")'.substr(0, '@Url.Content("~")'.length - 1);
    //resize重设(版面)宽高
    $(window).resize(function (e) {
        var iH=$(window).height();
        $("#layout_parent").height(iH-50);
    });


    $(function () {

        $('#layout_parent').layout({
            applyDemoStyles: true,
            west__size: 230,
            onresize: function () {
                $(window).resize();
            }
        });
        $(window).resize();
    });
</script>

